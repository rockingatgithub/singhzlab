<form action="/students/create" method="POST">
    <label for="name">
        Name:
        <input
            id="name"
            type="text"
            name="name"
            placeholder="Enter student name"
            required
        />
    </label>
    <label for="email">
        Email:
        <input
            id="email"
            type="email"
            name="email"
            placeholder="Enter student email"
            required
        />
    </label>
    <label for="batch">
        Batch:
        <input
            id="batch"
            type="radio"
            name="batch"
            value="Weekday"
            placeholder="Weekday"
            checked
        />
        <input
            id="batch"
            type="radio"
            name="batch"
            placeholder="Weekend"
            value="Weekend"
        />
    </label>
    <label for="college">
        College:
        <input
            id="college"
            type="text"
            name="college"
            placeholder="Enter student college"
            required
        />
    </label>
    <label for="status">
        Placement Status:
        <select name="status" id="status">
            <option value="placed">Placed</option>
            <option value="not_placed">Not Placed</option>
        </select>
    </label>
    <input type="submit" value="Submit" placeholder="Submit" />
</form>

<form action="/interviews/create" method="POST">
    <label for="name">
        Company:
        <input
            id="name"
            type="text"
            name="company"
            placeholder="Enter company name"
            required
        />
    </label>
    <label for="date">
        Date:
        <input
            id="date"
            type="date"
            name="date"
            placeholder="Enter the date"
            required
        />
    </label>
    <label for="description">
        Description:
        <textarea
            id="description"
            name="description"
            value="An IT company."
        ></textarea>
    </label>
    <input type="submit" value="Submit" placeholder="Submit" />
</form>

<%for(student of students){%> <%- include('student_profile') -%> <%}%>
<%for(comp of companies){%> <%- include('interview_list') -%> <%}%>
